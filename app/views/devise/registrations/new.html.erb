<div class="contents row">
  <div class="container">

<div class="help_box2">
<label>
  <span><i class="far fa-question-circle"></i></span>
  <input type="checkbox" name="checkbox">
<div id="popup"><%= image_tag '/assets/新規登録一.jpg', class: 'help1' %></div>
</label>
</div>
  <div class="title">
    <h2>ユーザー情報登録</h2>
  </div>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
       <div class='form-text-wrap'>
        <label class="form-text">ニックネーム</label>
        <span class="indispensable">必須</span>
       </div>
        <%= f.text_field :nickname, autofocus: true, maxlength: "6", placeholder: ' 6文字までのニックネームを登録できます' %>
      </div>

      <div class="field">
       <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
       </div>
        <%= f.email_field :email, placeholder: ' PC・携帯どちらでも可' %>
      </div>

      <div class="field">
       <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <span class="indispensable">必須</span>
       </div>
        <%= f.password_field :password, autocomplete: "off", placeholder: ' 6文字以上の半角英数字' %>
      </div>

      <div class="field">
       <div class='form-text-wrap'>
        <label class="form-text">パスワード(確認)</label>
        <span class="indispensable">必須</span>
       </div>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: ' 同じパスワードを入力して下さい' %>
      </div>

      <div class="actions">
      <%= f.button :type => "submit", class: "btn btn--edit btn-d" do %>
      <i class="fas fa-user"></i> ユーザー登録
      <% end %>
      </div>

    <% end %>
  </div>
</div>